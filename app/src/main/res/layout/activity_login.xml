<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FAFAFA"
    android:layout_height="match_parent"
    tools:context=".login.LoginActivity">

    <RelativeLayout
        android:id="@+id/rlLogo"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <RelativeLayout
            android:layout_marginBottom="40dp"
            android:background="@drawable/border_border"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/border_login">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:rotation="-30"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:textSize="60dp"
                    android:text="H"/>
                <TextView
                    android:layout_marginBottom="30dp"
                    android:rotation="20
"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:textSize="50dp"
                    android:text="a"/>
                <TextView
                    android:layout_marginBottom="30dp"
                    android:rotation="20"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:textSize="55sp"
                    android:text="U"/>
                <TextView
                    android:layout_marginBottom="30dp"
                    android:rotation="10"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="50sp"
                    android:text="I"/>
            </LinearLayout>
        </RelativeLayout>


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo_icon" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ln_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlLogo"
        android:orientation="vertical">

        <TextView
            style="@style/tv_Title"
            android:text="QUẢN LÝ PHÒNG THỰC HÀNH" />

        <TextView
            style="@style/tv_Title"
            android:text="HANOI UNIVERSITY OF INDUSTRY"
            android:textSize="17dp"
            android:textStyle="normal"
            android:layout_marginTop="0dp"/>

    </LinearLayout>

    <LinearLayout

        android:layout_margin="5dp"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/ln_title">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tip_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:hint="Tên đăng nhập">

            <EditText
                android:id="@+id/edt_User"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="18sp"
                />
        </com.google.android.material.textfield.TextInputLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tip_Pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Mật khẩu">

                <EditText
                    android:textSize="18sp"
                    android:id="@+id/edt_Pass"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="textPassword"
                    />

            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/border_button_login"
            android:text="Đăng nhập"
            android:textColor="@color/black"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_signup"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Đăng ký"
            android:textSize="18sp"
            android:background="@drawable/border_button_signup"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:textColor="@color/white"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:rotation="180"
        android:background="@drawable/border_border">
    </RelativeLayout>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:rotation="180"
        android:background="@drawable/border_login">

        <TextView
            android:textColor="@color/white"
            android:rotation="180"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_centerInParent="true"
            android:text="Team 10"/>
        <TextView
            android:textColor="@color/white"
            android:rotation="180"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Contact: Shi*****3"/>
    </RelativeLayout>
</RelativeLayout>
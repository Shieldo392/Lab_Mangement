<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".manage_labs.EditLabActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/teal_700"
            android:text="CẬP NHẬT PHÒNG THỰC HÀNH"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_menu"
            android:id="@+id/imv_menu"
            android:tint="@color/white"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"/>
    </RelativeLayout>

    <TableLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:layout_weight="0.3"
                android:text="Tên phòng học"/>
            <EditText
                android:layout_weight="1"
                android:id="@+id/edt_labName"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_weight="0.3"
                android:text="Khu"/>
            <EditText
                android:layout_weight="1"
                android:id="@+id/edt_area"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_weight="0.3"
                android:text="Tầng"/>
            <EditText
                android:layout_weight="1"
                android:id="@+id/edt_floor"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_weight="0.3"
                android:text="Khi chú"/>
            <EditText
                android:layout_weight="1"
                android:id="@+id/edt_note"/>
        </TableRow>
    </TableLayout>



</LinearLayout>
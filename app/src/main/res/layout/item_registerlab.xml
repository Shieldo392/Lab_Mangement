<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_registerlab"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="2dp">

    <LinearLayout
        android:id="@+id/subitem_registerlab1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:paddingLeft="4dp"
        android:paddingRight="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã phiếu đăng ký: "
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_item_registerlabid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="maphieu"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TableRow
        android:id="@+id/subitem_registerlab2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:paddingLeft="4dp"
        android:paddingRight="4dp">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên phòng: "
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt_item_labname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tenphong"
                android:textColor="@color/black" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ca: "
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt_item_session"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ca"
                android:textColor="@color/black" />
        </TableRow>

    </TableRow>

    <TableRow
        android:id="@+id/subitem_registerlab3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:paddingLeft="4dp"
        android:paddingRight="4dp">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời gian: "
                android:textColor="@android:color/holo_red_dark"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="thoigian"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="15sp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên học phần: "
                android:textColor="@android:color/holo_red_dark"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt_item_termname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tenhocphan"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="15sp" />
        </TableRow>

    </TableRow>

    <LinearLayout
        android:id="@+id/subitem_registerlab4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:paddingLeft="4dp"
        android:paddingRight="4dp">

        <TextView
            android:id="@+id/txt_label_replaced"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày học thay thế: " />

        <TextView
            android:id="@+id/txt_item_replaced"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="thaythe" />
    </LinearLayout>

</LinearLayout>